generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  name  String?
  createdAt DateTime @default(now())
}

model Student {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  crn      String @unique
  urn      String @unique
  name     String
  password String
  createdAt DateTime @default(now())
}
